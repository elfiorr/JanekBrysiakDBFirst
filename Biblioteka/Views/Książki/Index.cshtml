@model IEnumerable<Biblioteka.Models.Książki>

@{
    ViewBag.Title = "Index";
}

<h2>Książki</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TytułKsiążki)
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TytułKsiążki) 
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Podgląd", "Details", new { id = item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
